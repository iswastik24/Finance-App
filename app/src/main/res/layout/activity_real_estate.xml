                android:layout_alignParentTop="true"
                android:layout_marginEnd="111dp"
                android:gravity="center"
                android:text="REAL ESTATE"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="163dp"
                tools:layout_editor_absoluteY="0dp" />
            <ImageView
                android:id="@+id/ra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/vv"
                app:srcCompat="@drawable/ra" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ra"
                android:text="Most REITs have a straightforward business model: The REIT leases space and collects rents on the properties, then distributes that income as dividends to shareholders.

