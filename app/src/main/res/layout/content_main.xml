<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/mut"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Mutual Funds"
        app:layout_constraintBottom_toTopOf="@+id/bon"
        app:layout_constraintEnd_toStartOf="@+id/sto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="STOCKS"
        app:layout_constraintBottom_toTopOf="@+id/com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mut"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bon"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:text="BONDS"
        app:layout_constraintBottom_toTopOf="@+id/rea"
        app:layout_constraintEnd_toStartOf="@+id/com"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mut" />

    <Button
        android:id="@+id/com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commodities"
        app:layout_constraintBottom_toTopOf="@+id/ann"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bon"
        app:layout_constraintTop_toBottomOf="@+id/sto"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/rea"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:text="REAL ESTATE"
        app:layout_constraintBottom_toTopOf="@+id/por"
        app:layout_constraintEnd_toStartOf="@+id/ann"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bon" />

    <Button
        android:id="@+id/ann"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:text="Annuities"
        app:layout_constraintBottom_toTopOf="@+id/por"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rea"
        app:layout_constraintTop_toBottomOf="@+id/com" />

    <Button
        android:id="@+id/por"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portfolio Builder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ann"
        tools:ignore="MissingConstraints" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />
</android.support.constraint.ConstraintLayout>